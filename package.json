{
  "name": "ts-apollo-prisma-zero",
  "version": "1.0.0",
  "description": "Typescript apollo prisma boilerplate",
  "repository": "https://github.com/smallbee3/ts-apollo-prisma-zero.git",
  "author": "smallbee3 <smallbee3@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server.ts",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "lint": "eslint src/**/**/*.ts tests/**/**/*.ts",
    "tsc": "tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "npm -s run generate",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:down": "prisma migrate down 1 --experimental"
  },
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "apollo-server": "^2.15.1",
    "bcryptjs": "^2.4.3",
    "graphql-iso-date": "^3.6.1",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^9.0.0",    
    "nexus": "^0.25.0",
    "nexus-plugin-prisma": "^0.16.1"
  },
  "devDependencies": {
    "@types/graphql-iso-date": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.6"
  }
}
